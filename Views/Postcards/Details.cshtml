@model PostcardsManager.Models.Postcard

@{
    ViewBag.Title = Resourses.Resources.Details;
}

<div class="container">
    <div class="row">
        <h2>@Resourses.Resources.Details</h2>
    </div>
    <div class="row">
        <h4>@Resourses.Resources.Postcard</h4>
        <hr/>
    </div>
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SeriesId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Series.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhotographerId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Photographer.FullName)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#front" aria-controls="front" role="tab" data-toggle="tab">@Html.DisplayTextFor(model => model.ImageLinkFront)</a></li>
                <li role="presentation"><a href="#back" aria-controls="back" role="tab" data-toggle="tab">@Html.DisplayTextFor(model => model.ImageLinkBack)</a></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="front">
                     @if (!string.IsNullOrEmpty(Model.ImageLinkFront))
                     {
                         <img class="img-responsive" src="@Model.ImageLinkFront" title="@Model.Title" alt="@Model.Title"/>
                     }
                </div>
                <div role="tabpanel" class="tab-pane" id="back">
                     @if (!string.IsNullOrEmpty(Model.ImageLinkBack))
                     {
                         <img class="img-responsive" src="@Model.ImageLinkBack" title="@Model.Title" alt="@Model.Title"/>
                     }
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <p>
            @Html.ActionLink(Resourses.Resources.Edit, "Edit", new { id = Model.PostcardId }) |
            @Html.ActionLink(Resourses.Resources.BackToList, "Index")
        </p>
    </div>
</div>
