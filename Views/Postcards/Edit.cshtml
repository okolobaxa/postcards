@using Resourses
@model PostcardsManager.Models.Postcard

@{
    ViewBag.Title = Resources.Edit;
}

<div class="container">
    <div class="row">
        <h2>@Resources.Edit</h2>
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>@Resources.Series</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => model.SeriesId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Year, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Year, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Year, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhotographerId, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("PhotographerId", null, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PhotographerId, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SeriesId, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("SeriesId", null, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.SeriesId, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ImageLinkFront, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.ImageLinkFront, new {type = "hidden", role = "uploadcare-uploader"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ImageLinkBack, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.ImageLinkBack, new {type = "hidden", role = "uploadcare-uploader"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Resources.Save" class="btn btn-default"/>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        @Html.ActionLink(Resources.BackToList, "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://ucarecdn.com/widget/2.3.5/uploadcare/uploadcare.min.js" charset="utf-8"></script>
}