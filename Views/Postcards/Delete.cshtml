@model ContosoUniversity.Models.Postcard

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">
        <h2>Delete</h2>
    </div>
    <div class="row">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="row">
        <h4>Postcard</h4>
        <hr/>
    </div>
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                Title
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                Year
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Year)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SeriesId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Series.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhotographerId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Photographer.FullName)
            </dd>
        </dl>
    </div>
    <div class="row">
         @using (Html.BeginForm())
         {
             @Html.AntiForgeryToken()

             <div class="form-actions no-color">
                 <input type="submit" value="Delete" class="btn btn-default"/> |
                 @Html.ActionLink("Back to List", "Index")
             </div>
         }
    </div>
</div>
