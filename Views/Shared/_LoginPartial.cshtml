@if (!Request.IsAuthenticated)
{
    <div class="rb-art-menu__item login-menu">
        @Html.ActionLink("[[[Register]]]", "Login", "Account", null, new {id = "registerLink", @class = "rb-art-menu__link"})
    </div>
    <div class="rb-art-menu__item">
        @Html.ActionLink("[[[Login]]]", "Login", "Account", null, new {@class = "rb-art-menu__link"})
    </div>
}
else
{
    <div class="rb-art-menu__item login-menu">
        <a href="javascript:document.getElementById('logoutForm').submit()">[[[Log off]]]</a>
    </div>
}

@using (Html.BeginForm("LogOff", "Auth0Account", new {returnUrl = ""}, FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
{
    @Html.AntiForgeryToken()
}